<%- include('partials/head'); -%> 

<body>
    <nav class="navbar navbar-default">
        <div class="container">
          <div class="navbar-header">
            <p class="navbar-brand">Welcome to DAILY JOURNAL</p>
          </div>
        </div>
    </nav>
    <div class="container">
        <h2>Sign In / Register</h2>
    </div>
    
    <div class="container login-register">
        <form class="form-horizontal" action="/users/login" method="POST">
            <!-- Email Field  -->
            <div class="form-group">
            <label for="inputEmail3" class="col-sm-2 control-label">Email</label>
            <div class="col-sm-10">
                <input type="email" class="form-control" id="inputEmail3" placeholder="Email" name="useremail">
            </div>
            </div>
            <!-- Password Field  -->
            <div class="form-group">
            <label for="inputPassword3" class="col-sm-2 control-label">Password</label>
            <div class="col-sm-10">
                <input type="password" class="form-control" id="inputPassword3" placeholder="Password" name="userpassword">
            </div>
            </div>
            <!-- Remember me field  -->
            <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <div class="checkbox">
                <label>
                    <input type="checkbox" name="user_remember"> Remember me
                </label>
                </div>
            </div>
            <!-- Sign in Field  -->
            </div>
            <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">Sign in</button>
                <a class="btn btn-default" href="/register" role="button">Register</a>
            </div>
            </div>

        </form>
    </div>
</body>

</html>